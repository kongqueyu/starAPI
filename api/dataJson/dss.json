{
  "swagger": "2.0",
  "info": {
    "description": " 定制了经分系统的API.<br/>\n author: pookpal<br/>\n更新历史:\n 2016-06-15 初次搭建.  <br/>\n<br/>\n 需要说明的事项如下:<br/>\n<pre>本文档不是最终版本</pre>",
    "version": "1.0.0",
    "title": "四达经济分析系统API"
  },
  "host": "",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
    "role/getReportMenus": {
      "get": {
        "tags": [
          "权限管理"
        ],
        "summary":"查询固定报表的菜单",
        "description": "查询当前用户设定的固定报表的菜单",
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/reportMenu"
              }
            }
          },
          "400": {
            "description": "Invalid Order"
          }
        }
      }
    },



    "role/getAnalysisMenus": {
      "get": {
        "tags": [
          "权限管理"
        ],
        "summary":"查询专题分析的菜单",
        "description": "查询当前用户设定的专题分析的菜单",
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/reportMenu"
              }
            }
          },
          "400": {
            "description": "Invalid Order"
          }
        }
      }
    }
  },
  "definitions": {
      "reportMenu": {
        "type": "object",
        "properties": {
          "id":{
              "type": "integer",
              "description":"当前菜单的自身主键id",
              "required":true
          },
          "parent_id":{
            "type": "integer",
            "description":"当前菜单父级的自身主键id, 0代表根级",
            "required":true
          },
          "name": {
            "type": "string",
            "description":"菜单名称",
            "required":true
          },
          "level": {
            "type": "integer",
            "description":"层级，0代表根，1,2,3...",
            "required":true
          },
          "rank": {
            "type": "integer",
            "description":"当前菜单在同级中的位置,1表示最上方",
            "required":true
          }

        }
      }
  }
}
